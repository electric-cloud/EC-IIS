<editor>
	<help>/commander/pages/@PLUGIN_NAME@/@PLUGIN_KEY@_help?s=Administration&amp;ss=Plugins#ListVirtualDirectories</help>
	<label>Application Server - IIS ListVirtualDirectories</label>
	<version>@PLUGIN_VERSION@</version>
	<description>List the virtual directories on a web server.</description>
    <formElement>
        <type>entry</type>
        <label>Virtual directory name:</label>
        <property>vdirName</property>
        <required>0</required>
        <documentation>Virtual directory name to retrieve. If not provided, will retrieve all the virtual directories.</documentation>
    </formElement>
    <formElement>
        <type>entry</type>
        <label>Property name:</label>
        <property>propertyName</property>
        <required>0</required>
        <value>/myJob/IISVirtualDirectories</value>
        <documentation>Property to write retrieved data.</documentation>
    </formElement>
    <formElement>
        <type>select</type>
        <label>Dump format:</label>
        <property>dumpFormat</property>
        <required>0</required>
        <option>
            <value>xml</value>
            <name>XML</name>
        </option>
        <option>
            <value>json</value>
            <name>JSON</name>
        </option>
        <option>
            <value>propertySheet</value>
            <name>Property sheet</name>
        </option>
        <option>
            <value>raw</value>
            <name>Raw</name>
        </option>
        <value>propertySheet</value>
        <documentation>Choose the format to represent retrieved data.</documentation>
    </formElement>
</editor>
